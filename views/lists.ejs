<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <div class="box gradient-background" id="heading">
        <h1> <%=listtitle %> </h1>
    </div>
    
    <div class="box">
        
      <% newListItem.forEach(function(item){ %>

        <form action="/delete" method="post">
            <div class="item"> 
                <input type="checkbox" name="checkbox" value="<%=item._id %>" onchange="this.form.submit()">     
                <p><%=item.Name%></p>
            </div>  
            <input type="hidden" name="listName" value="<%=listtitle%>"></input>
        </form>        
           <% }); %>
        <form class="item"action="/" method="post">
            <input type="text" name="nexttodo" placeholder="New Item" autocomplete="off">
            <button type="submit" class="gradient-background"name="list"value="<%= listtitle %>">+</button> 
                
        </form>
    </div>
   
   
</body>
</html>